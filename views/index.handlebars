<h1 id="pageTitle">Eat-Da-Burger!</h1>


<div class="row">
    <div class="col col-12 col-md-6">
        <div class="row">
            <div class="col col-12">
                <h3 class="sectionTitle">Burgers waiting to be devoured</h3>
            </div>
            <div class="col col-12">
                <ul class="burgerList">
                    {{#each burgers}}
                    {{#unless devoured}}
                    <li>
                        <span class="emoji">🍔</span> {{burger_name}}
                        <button class="eat-burger btn btn-danger" data-id="{{this.id}}" data-newdevoured="true">🔥
                            Devour it!</button>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>

    </div>

    <div class="col col-12 col-md-6">
        <div class="row">
            <div class="col col-12">
                <h3 class="sectionTitle">Burgers eaten up</h3>
            </div>
            <div class="col col-12">
                <ul class="burgerList">
                    {{#each burgers}}
                    {{#if devoured}}
                    <li>
                        <span class="emoji">🦴</span> {{burger_name}}
                        <button class="eat-burger btn btn-warning" data-id="{{this.id}}"
                            data-newdevoured="false">Reorder!!</button>
                    </li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col col-12">
        <div class="row">
            <div class="col col-12">
                <h3 class="sectionTitle" id="createTitle">Create a burger</h3>
            </div>
        </div>
        <div class="row">
            <div class="col col-12">
                <form class="create-form">

                    <div class="form-group">
                        <label for="burgerName">Burger Name:</label>
                        <input type="text" id="burgerName" name="name">
                    </div>

                    <button type="submit" class="btn btn-warning">Add Burger</button>
                </form>
            </div>
        </div>
    </div>
</div>